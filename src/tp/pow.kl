PROGRAM mth_pow
%NOBUSYLAMP
%NOLOCKGROUP
%COMMENT = 'absolute value'

VAR
	  reg_no : INTEGER
    power : REAL
    val : REAL

%include registers.klh
%include tpe.klh
%include math.klh

BEGIN
  val = tpe__get_real_arg(1)
  power = tpe__get_real_arg(2)
  reg_no = tpe__get_int_arg(3)

  registers__set_real(reg_no, POW(val, power))
END mth_pow
